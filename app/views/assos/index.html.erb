  <%= form_tag assos_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Rechercher une association"
    %>
    <%= button_tag do %>
      <%= icon 'fas', 'search' %>
    <% end %>
  <% end %>

<div class="asso-cards">
  <% @assos.each do |asso| %>
  <% if asso.photo.attached? %>
    <div class="asso-card" style="background-image: url('<%= cl_image_path asso.photo.key, height: 350, width: 300, crop: :fill %>')">
  <% else %>
    <div class="asso-card">
  <% end %>
        <%= link_to asso.name, asso_path(asso) %>
        <%= asso.description %>
        <%= asso.address %>
        <%= icon 'fas', 'city' %> <%= asso.city %>
        <%= icon 'far', 'envelope' %> <%= asso.email %>
        <%= icon 'fas', 'at' %> <%= link_to "Site web", asso.website %>
        <%= icon 'fas', 'phone' %> <%= asso.phone_number %>
        <% if current_user.favorites?(asso) %>
          <%= link_to "unFav", fav_path(Fav.find_by(asso: asso, user: current_user)), method: :delete %>
        <% else %>
          <%= link_to "Fav", asso_favs_path(asso), method: :post %>
        <% end %>
    </div>
  <% end %>
</div>



<footer class="footer">
