  <%= form_tag assos_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Rechercher une association"
    %>
    <%= button_tag do %>
      <%= icon 'fas', 'search' %>
    <% end %>
  <% end %>

<div class="asso-cards">
<div class="asso-card">
  <% @assos.each do |association| %>
    <%= link_to association_path(association) do %>
    <%= association.name %>
    <%= association.address %>
    <%= association.city %>
    <%= association.description %>
    <%= association.email %>
    <%= association.website %>
    <%= association.phone_number %>
    <% end %>
  <% end %>
  </div>
</div>



