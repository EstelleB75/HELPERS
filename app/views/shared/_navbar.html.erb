<div class="navbar navbar-expand-sm navbar-light navbar-lewagon ">
  <%= link_to assos_path, class: "navbar-brand" do %>
    <%= image_tag "Capture logo.PNG" %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent" style="padding-right: 4vw;">
    <ul class="navbar-nav mr-auto ">
      <% if user_signed_in? %>
        <%= link_to dashboard_path, class: "nav-link a-without-color mr-1", data: {turbolinks: false} do %>
          Mes favoris<span id="favorite-counter"><%= current_user.favs.count %></span>
        <% end %>
        <li class="nav-item dropdown">
          <%= image_tag "user.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <div id="email-drop">
                <%= current_user.email %>
          </div>
            <%= link_to "#", class: "dropdown-item" do %>
            <i class="fas fa-cog"></i> Paramètres
            <% end %>
            <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %>
            <i class="fas fa-power-off"></i>Se déconnecter
            <% end %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Se connect", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
