<div class="bg-white index-display pt-5">
  <h2 class="text-center bolder-text">Les résultats qui vous correspondent</h2>
  <div class="separator d-flex justify-content-center align-items-center"></div>
  <br>
  <br>


    <div class="asso-cards m-5">
      <div class="d-flex flex-wrap flex-row justify-content-center align-items-center px-10vw">
<% if @assos.empty? %>
<p>Aucun résultat ne correspond à votre recherche <i class="fas fa-frown"></i>.</p>
  <% else %>
        <% @assos.each do |asso| %>
          <div class="w-50 my-3 d-flex justify-content-center align-items-center">
            <div class="asso-card d-flex justify-content-start custom-rounded custom-size" style="box-shadow: 4px 4px 14px rgba(0,0,0,0.1);">
              <% if asso.photo.attached? %>
                <%= cl_image_tag asso.photo.key, class: "custom-rounded-left", height: 180, width: 150, crop: :fill %>
              <% else %>
                <div class="custom-rounded">
                  <%= image_tag 'building-2696768_960_720.png'%>
                </div>
              <% end %>
              <div class="d-flex flex-column px-4 py-3">
                <div class="font-20 important">
                  <%= link_to asso.name, asso_path(asso), class: "text-left a-without-color" %>
                </div>
                <div class="font-16">
                  <%= asso.description.truncate(120) %>
                </div>
                <%= asso.address %>
                <div class="mt-auto d-flex justify-content-start flex-row p-1">
                  <div class="pr-3"><%= icon 'fas', 'city' %> <%= asso.city %></div>
                  <div class="pr-3"><%= icon 'far', 'envelope' %> <%= asso.email%></div>
                  <div class="pr-3"><%= icon 'fas', 'at' %> <%= link_to "Site web", asso.website%></div>
                  <div class="pr-3"><%= icon 'fas', 'phone' %> <%= asso.phone_number%></div>
                  <div data-controller="fav">
                    <% if current_user.favorites?(asso) %>
                      <%= link_to (Fav.find_by(asso: asso, user: current_user)), method: :delete, data: {action: 'click->fav#update'}, remote: true do %>
                        <%= icon 'fas', 'heart', data: {'fav-target': 'icon'} %>
                      <% end %>
                    <% else %>
                      <%= link_to asso_favs_path(asso), method: :post, data: {action: 'click->fav#update'}, remote: true do %>
                        <%= icon 'far', 'heart', data: {'fav-target': 'icon'} %>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% end %>
          
        <% end %>
      </div>
    </div>
    <div class="helpers-footer">
      <footer class="footer border-top d-flex justify-content-between">
        <div class="helpers-text d-flex justify-content-start">
          <p class=>Made with <%= icon 'fas', 'heart', class: "heart" %> by Helpers' Team</p>
        </div>
        <div class="helpers-icons d-flex justify-content-end">
          <%= icon 'fab', 'twitter' %>
          <%= icon 'fab', 'facebook' %>
          <%= icon 'fab', 'instagram' %>
        </div>
      </footer>