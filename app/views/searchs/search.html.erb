<div class="container-form">
  <div class="input_styling bg-white p-5 m-5 d-flex justify-content-center align-items-center flex-column w-100">
    <h2>A quel groupement appartient votre besoin ?</h2>
    <%= form_tag("/search_sub_cat", method: :get) do %>
      <div class="d-flex flex-column">
        <% @sub_cat.each do |sub_cat| %>
        <div>
          <%= check_box_tag "sub_cat_#{sub_cat.id}", sub_cat.id, false, name: "sub_cat" %>
          <%= label_tag "sub_cat_#{sub_cat.id}", sub_cat.name %>
        </div>
        <% end %>
      </div>
    <%= submit_tag "Continuer" %>
    <% end %>
  </div>
</div>

