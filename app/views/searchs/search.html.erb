<div class="container-form">
  <div class="input_styling bg-white p-5 mt-5 d-flex justify-content-center align-items-center flex-column w-100">
    <h2>Votre recherche concerne :</h2>
    <%= form_tag("/search_sub_cat", method: :get) do %>
       <div class="d-flex justify-content-around flex-wrap" style= "max-width:62.5rem;" >
       <div>
        <% @sub_cat.each do |sub_cat| %>
          <%= radio_button_tag "sub_cat", sub_cat.id, false, name: "sub_cat" %>
          <%= label_tag "sub_cat_#{sub_cat.id}", sub_cat.to_sentence_label %>
          <%= hidden_field_tag "category", @category.id %>
        <% end %>
        </div>
      </div>
      <div class="submit-btn">
    <%= submit_tag "Continuer" %>
    </div>
    <% end %>
  </div>
</div>

